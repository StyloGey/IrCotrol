<?xml version="1.0" encoding="utf-8"?>
<TableRow android:layout_height="72dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageButton
            style="@android:style/Widget.DeviceDefault.ImageButton"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:id="@+id/button_previous"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_round_skip_previous_24px"
            android:tint="@color/grey_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <ImageButton
            android:background="@color/dark"
            android:elevation="0dp"
            android:id="@+id/button_stop"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_round_stop_24px"
            android:tint="@color/grey_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_previous"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <ImageButton
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:id="@+id/button_play_pause"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_round_play_arrow_24px"
            android:tint="@color/grey_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

        <ImageButton
            android:background="@color/dark"
            android:elevation="0dp"
            android:id="@+id/button_next"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_round_skip_next_24px"
            android:tint="@color/grey_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25" />

    </android.support.constraint.ConstraintLayout>

</TableRow>
